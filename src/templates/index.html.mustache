<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>{{{APP_NAME}}}</title>

    <meta name="description" content="{{{APP_DESCRIPTION}}}" />
    <meta name="Keywords" content="{{{APP_KEYWORDS}}}"/>

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Style -->
    <link rel="stylesheet" type="text/css" href="./app.css" media="screen" />

    <!-- Icons and Web Application definition -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="{{{APP_SHORTNAME}}}">
    <meta name="application-name" content="{{{APP_SHORTNAME}}}">
    <meta name="msapplication-TileColor" content="{{{APP_TILECOLOR}}}">
    <meta name="msapplication-config" content="/browserconfig.xml">
    <meta name="theme-color" content="{{{APP_THEMECOLOR}}}">
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/icons/safari-pinned-tab.svg" color="{{{APP_THEMECOLOR}}}">
    <link rel="shortcut icon" href="/icons/favicon.ico">


    <link rel="shortcut icon" href="/favicon.png" type="image/png" />
    <link rel="canonical" href="{{{APP_URL}}}" />
    <meta name="referrer" content="no-referrer-when-downgrade" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Social Media Metadata -->
    <meta property="og:site_name" content="{{{APP_NAME}}}" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{{APP_NAME}}}" />
    <meta property="og:description" content="{{{APP_DESCRIPTION}}}" />
    <meta property="og:url" content="{{{APP_URL}}}" />
    <meta property="og:image" content="{{{APP_IMAGE}}}" />
    <meta property="article:publisher" content="{{{ORG_FACEBOOK}}}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{{APP_NAME}}}" />
    <meta name="twitter:description" content="{{{APP_DESCRIPTION}}}" />
    <meta name="twitter:url" content="{{{APP_URL}}}" />
    <meta name="twitter:image" content="{{{APP_IMAGE}}}" />
    <meta name="twitter:site" content="{{{ORG_TWITTERHANDLE}}}" />

    <!-- Website JSON-LD Metadata -->
    <script type="application/ld+json" src="./app-ld.json" />
  </head>
  <body>
  </body>
</html>
